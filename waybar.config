{
	"layer": "top",
	"position": "top",

	"modules-left": [
		"sway/workspaces",
		"custom/terminal",
		"custom/browser"
	],
	"modules-right": [
		"network",
		"network#vpn",
		"pulseaudio",
		"memory",
		"cpu",
		"temperature",
		"disk",
		"battery",
		"tray",
		"clock#2"
	],
	"sway/workspaces": {
		"disable-scroll": true,
		"format": "{name}"
	},
	"custom/terminal": {
		"format": "ï„  ",
